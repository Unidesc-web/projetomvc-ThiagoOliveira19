@model VulnerabilidadesApp.Models.Vulnerabilidade

@{
    ViewData["Title"] = "Editar Vulnerabilidade";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Severidade"></label>
        <input asp-for="Severidade" class="form-control" />
        <span asp-validation-for="Severidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataDescoberta"></label>
        <input asp-for="DataDescoberta" class="form-control" type="date" />
        <span asp-validation-for="DataDescoberta" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
